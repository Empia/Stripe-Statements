	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENCE*</include>
				<include>NOTICE*</include>
				<include>lib/Stripe-Statements.properties</include>
			</includes>
		</fileSet>
